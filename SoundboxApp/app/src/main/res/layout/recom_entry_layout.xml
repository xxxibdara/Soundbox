<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?themeColorSecondary"
    android:orientation="vertical"
    android:padding="4dp">


    <TextView
        android:id="@+id/song_name"
        android:layout_width="147dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/your_artist"
        app:layout_constraintBottom_toBottomOf="@+id/album_cover"
        app:layout_constraintStart_toEndOf="@+id/album_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="147dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="@string/name"
        android:textColor="?themeTextColorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/song_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/song_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="87dp"
        android:layout_height="85dp"
        android:contentDescription="Album Art"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>